<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:padding="10dp">

    <TextView
        android:text="@string/date"
        android:layout_row="0"
        android:layout_column="0"
        style="@style/dialog_label"/>

    <TextView
        android:id="@+id/release_date"
        android:text="Dec 31, 1970"
        android:layout_row="0"
        android:layout_column="1"/>

    <TextView
        android:text="@string/size"
        android:layout_row="1"
        android:layout_column="0"
        style="@style/dialog_label"/>

    <TextView
        android:id="@+id/release_size"
        android:text="526.93 KB"
        android:layout_row="1"
        android:layout_column="1"/>

    <TextView
        android:text="@string/whats_new"
        android:layout_row="2"
        android:layout_column="0"
        style="@style/dialog_label"/>

    <TextView
        android:id="@+id/release_info"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.\n\nUt enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:scrollbars="vertical"
        android:singleLine="false"/>
</GridLayout>