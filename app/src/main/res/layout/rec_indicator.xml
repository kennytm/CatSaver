<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rec_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:alpha="0.4"
        android:background="@color/rec_off">

        <ImageView
            android:id="@+id/rec_icon"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"
            android:scaleType="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/rec_count"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/rec_text_color"
            android:layout_toRightOf="@id/rec_icon"
            android:layout_toEndOf="@id/rec_icon"
            android:singleLine="true"
            android:text="0"
            android:layout_alignTop="@id/rec_icon"
            android:layout_alignBottom="@id/rec_icon"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center_vertical|start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_ip"
            android:textSize="12sp"
            android:textColor="@color/rec_text_color"
            android:layout_below="@id/rec_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:text="255.255.255.255"
            android:textStyle="bold"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingEnd="3dp"/>

    </RelativeLayout>

    <!--
-->
</RelativeLayout>
